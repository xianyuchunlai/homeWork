<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.lanou3g.bean.Employee" table="employee" schema="forhomework">
        <id name="eid">
            <column name="eid" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(11)"/>
        </property>
        <property name="department">
            <column name="department" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="time">
            <column name="time" sql-type="int(11)"/>
        </property>
        <property name="home">
            <column name="home" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>